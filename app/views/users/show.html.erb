<%= flash[:notice] %>
<% if @user.errors.any? %>
  <%= @user.errors.count %>errors prohibited this obj from being saved:
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<div class="container px-5 px-sm-0">
 <div class="row">
  <div class="col-md-3">
   <%= render 'books/list',book: @book_temprate,user: @user %>

  </div>
  <div class="col-md-8 offset-md-1">
   <h2>Users</h2>
   <table class="table table-hover table-inverse">
    <thead>
     <tr>
      <th>image</th>
      <th>name</th>
      <th colspan="1"></th>
     </tr>
    </thead>

    <tbody>
     <% @books.each do |book| %>
     <tr>
      <td><%= link_to book_path(book.id) do %>
       <%= image_tag book.get_image %>
       <% end %></td>
      <td><%= link_to book_path(book.id) do %>
       <%= book.title %>
       <% end %></td>
      <td><%= book.body %></td>
     </tr>
     <% end %>
    </tbody>
   </table>

  </div>
 </div>
</div>
<h1>画像投稿</h1>
<%= form_with model: @book do |f| %>

<h4>Title</h4>
<%= f.text_field:title %>
<h4>Opinion</h4>
<%= f.text_area:body %>
<%= f.submit 'Create book' %>
<% end %>


<% @books.each do |book| %>
<div>

 <%= link_to book_path(book.id) do %>
 <%= image_tag book.get_image %>showリンク
 <% end %>

  <p>shuhei:<%= image_tag book.user.get_profile_image(100,100) %></p>
  <p>Title: <%= book.title %></p>
  <p>Opinion: <%= book.body %></p>
  <p>User name: <%= book.user.name %><p>
</div>

<% end %>
